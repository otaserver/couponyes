<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp"
    android:id="@+id/fl_main">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="5dp"
        android:background="#a000"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_demo" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_icon"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="新闻标题文字，一定要长，最好是2行，甚至是3行"
        android:textColor="#000"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_title"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/iv_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="32.09"
        android:textColor="#F00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_below="@id/tv_item_price"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="2018-4-23 23:23"
        android:textColor="#8000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_date"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="#零食/坚果/特产" />

</RelativeLayout>
